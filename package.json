{
  "name": "vscode-sound-notification",
  "displayName": "Sound Notification",
  "description": "A must extension for Vibe Coders and doom scrollers.",
  "version": "1.0.0",
  "publisher": "clararehmann",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "sound",
    "notification",
    "audio",
    "save",
    "feedback",
    "file save"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onStartupFinished",
    "onCommand:soundNotification.playTestSound",
    "onCommand:soundNotification.playWelcomeSound",
    "onCommand:soundNotification.toggleSounds",
    "onCommand:soundNotification.openSettings",
    "onCommand:soundNotification.switchSoundProfile"
  ],
  "contributes": {
    "commands": [
      {
        "command": "soundNotification.playTestSound",
        "title": "Play Test Sound",
        "category": "Sound Notification"
      },
      {
        "command": "soundNotification.playWelcomeSound",
        "title": "Play Welcome Sound",
        "category": "Sound Notification"
      },
      {
        "command": "soundNotification.toggleSounds",
        "title": "Toggle Sound Notifications",
        "category": "Sound Notification"
      },
      {
        "command": "soundNotification.openSettings",
        "title": "Open Sound Settings",
        "category": "Sound Notification"
      },
      {
        "command": "soundNotification.switchSoundProfile",
        "title": "Switch Sound Profile",
        "category": "Sound Notification"
      }
    ],
    "configuration": {
      "title": "Sound Notification",
      "properties": {
        "soundNotification.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable all sound notifications"
        },
        "soundNotification.volume": {
          "type": "number",
          "default": 0.5,
          "minimum": 0,
          "maximum": 1,
          "description": "Volume level for sound notifications (0.0 to 1.0)"
        },
        "soundNotification.events.onSave": {
          "type": "boolean",
          "default": true,
          "description": "Play sound when files are saved"
        },
        "soundNotification.events.onDelete": {
          "type": "boolean",
          "default": true,
          "description": "Play sound when files are deleted"
        },
        "soundNotification.events.onOpen": {
          "type": "boolean",
          "default": true,
          "description": "Play sound when files are opened"
        },
        "soundNotification.events.onDownload": {
          "type": "boolean",
          "default": true,
          "description": "Play sound when code is run/downloaded"
        },
        "soundNotification.customSounds.save": {
          "type": "string",
          "default": "",
          "description": "Custom sound file path for save events (leave empty for default)"
        },
        "soundNotification.customSounds.delete": {
          "type": "string",
          "default": "",
          "description": "Custom sound file path for delete events (leave empty for default)"
        },
        "soundNotification.customSounds.open": {
          "type": "string",
          "default": "",
          "description": "Custom sound file path for open events (leave empty for default)"
        },
        "soundNotification.customSounds.download": {
          "type": "string",
          "default": "",
          "description": "Custom sound file path for download/run events (leave empty for default)"
        },
        "soundNotification.soundProfile": {
          "type": "string",
          "enum": ["default", "gunshot"],
          "default": "default",
          "description": "Select the sound profile to use for notifications."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
}
